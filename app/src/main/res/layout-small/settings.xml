<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@drawable/last"
    android:id="@+id/settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/of_light"
        android:text="Quizzam!"
        android:textColor="#FB7F05"
        android:layout_marginTop="70dp"
        android:textSize="12sp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="45sp"
        android:textColor="#FB7F05"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/of_bold"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPressureLevel"
        android:text="Pressure Level : Fast(15 seconds)"
        android:textColor="#FA7E05"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/of_med"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="210dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/btnPressureSlow"
            android:text="Slow"
            android:textAllCaps="false"
            android:fontFamily="@font/of_light"
            android:textSize="16sp"
            android:background="@drawable/quiz_names_shape"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/btnPressureMedium"
            android:text="Medium"
            android:fontFamily="@font/of_light"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/quiz_names_shape"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/btnPressureFast"
            android:text="Fast"
            android:fontFamily="@font/of_light"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/quiz_names_shape"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Your Progress"
            android:textColor="#FA7E05"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:fontFamily="@font/of_med"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnResetProgress"
            android:text="Are you sure?"
            android:textColor="#FA7E05"
            android:fontFamily="@font/of_light"
            android:layout_marginTop="390dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/lastdashboardbtn"/>

    </RelativeLayout>


</RelativeLayout>