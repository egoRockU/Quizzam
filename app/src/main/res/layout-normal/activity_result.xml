<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/last"
    tools:context=".Result">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quizzam!"
        android:fontFamily="@font/of_bold"
        android:textColor="#Ffffff"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:gravity="right"/>
    <TextView
        android:id="@+id/tvConratulatoryMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:fontFamily="@font/of_bold"
        android:textColor="#FB7F05"
        android:textSize="45sp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/of_light"
        android:text="UCC Admission Test Reviewer (subject)"
        android:textColor="#FB7F05"
        android:layout_marginTop="179dp"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_marginTop="220dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/result_circle1"
            android:layout_marginBottom="3dp"/>
        <ImageView
            android:layout_marginTop="235dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/result_circle2"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_marginTop="245dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/result_circle3"
            android:gravity="center"
            android:text="00"
            android:textSize="70sp"
            android:fontFamily="@font/of_sembold"
            android:paddingTop="18dp"
            android:layout_centerHorizontal="true"/>

        <!-- Your Score -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score:"
            android:layout_marginTop="260dp"
            android:textColor="@color/white"
            android:fontFamily="@font/of_light"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="190dp"
        >

        <TextView
            android:id="@+id/tvTimeTaken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:paddingBottom="10dp"
            android:textSize="45sp"
            android:layout_marginRight="205dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Time Taken (Minutes)"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:paddingTop="60dp"
            android:layout_marginRight="205dp"
            />

        <!-- Line lang -->
        <ImageView
            android:layout_width="4dp"
            android:layout_marginTop="30dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="#FA7E05"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="00"
            android:id="@+id/tvPerfectQuizValues"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#FA7E05"
            android:textSize="45sp"
            android:layout_marginLeft="205dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Perfect Quiz"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textColor="#FA7E05"
            android:paddingTop="60dp"
            android:layout_marginLeft="205dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="640dp">

        <Button
            android:id="@+id/btnRetake"
            android:layout_width="133dp"
            android:layout_height="38dp"
            android:background="@drawable/startbuttonshape"
            android:onClick="RetakeQuiz"
            android:text="Retake Quiz"
            android:textAllCaps="false"
            app:backgroundTint="#FB7F05"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <Button
            android:id="@+id/btnDashboard"
            android:layout_width="133dp"
            android:layout_height="38dp"
            android:background="@drawable/lastdashboardbtn"
            android:onClick="Dashboard"
            android:text="Dashboard"
            android:textColor="#FA7E05"
            android:textAllCaps="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</RelativeLayout>