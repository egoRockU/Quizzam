<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FA7E05</item>
        <item name="colorPrimaryVariant">#FA7E05</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="ToastCorrect">
        <item name="stTextColor">#fff</item>
        <item name="stRadius">50dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stColorBackground">#FA7E05</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/toastcheck</item>
    </style>
    <style name="ToastWrong">
        <item name="stTextColor">#fff</item>
        <item name="stRadius">50dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stColorBackground">#FA7E05</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/toasterror</item>
    </style>
    <style name="ToastResetProgress">
        <item name="stTextColor">#fff</item>
        <item name="stRadius">50dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="stColorBackground">#FA7E05</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/baseline_restart_alt_24</item>
    </style>

    <style name="ToastNoWifi">
        <item name="stTextColor">#FA7E05</item>
        <item name="stRadius">50dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextBold">true</item>
        <item name="android:gravity">top</item>
        <item name="stColorBackground">#Fff</item>
        <item name="stSolidBackground">false</item>
        <item name="stIconStart">@drawable/baseline_wifi_off_24</item>
    </style>
    <style name="Theme.QuizApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AlertDialogCustom">
        <item name="android:textColor">#FA7E05</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dialogMessage">#FA7E05</item>
        <item name="android:background">#ffffff</item>
        <item name="buttonBarButtonStyle">@drawable/lastdashboardbtn</item>
        <item name="android:fontFamily">@font/of_sembold</item>
    </style>
    <style name="Theme.QuizApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QuizApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>